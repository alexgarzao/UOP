import ncurses

entity start
	def start()
		ncurses.initscr()                          /* Start curses mode              */
		ncurses.writeln("Hello World !!!")         /* Print Hello World              */
		ncurses.refresh()                          /* Print it on to the real screen */
		ncurses.getch()                            /* Wait for user input            */
		ncurses.endwin()                           /* End curses mode                */
	end
end
